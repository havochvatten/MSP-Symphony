    <artifactId>symphony-ws</artifactId>
    <version>1.23.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>Symphony webservices</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>17</java.version>
        <version.jakartaee-api>10.0.0</version.jakartaee-api>
        <version.mockito>5.18.0</version.mockito>
        <version.geotools>29.6</version.geotools>
        <version.rest.assured>5.5.5</version.rest.assured>
        <version.postgresql-jdbc-driver>42.7.7</version.postgresql-jdbc-driver>
        <version.hibernate>6.6.7.Final</version.hibernate>
        <version.junit>4.13.2</version.junit>
        <version.jackson>2.19.0</version.jackson>
        <version.slf4j>2.0.17</version.slf4j>
        <version.resteasy-core>6.2.12.Final</version.resteasy-core>
        <version.java.lang3>3.17.0</version.java.lang3>
        <version.jts>1.18.2</version.jts> <!--Sync with GeoTools JTS dependency -->
        <version.jberet>3.1.0.Final</version.jberet>
        <version.jmh>1.37</version.jmh>
        <version.maven.min>3.9.9</version.maven.min>
